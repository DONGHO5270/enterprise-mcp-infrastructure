# Environment Configuration Template
# Copy this file to environment.env and customize as needed

# Node.js Environment
NODE_ENV=production
LANG=C.UTF-8
LC_ALL=C.UTF-8
PYTHONIOENCODING=utf-8
TZ=Asia/Seoul

# MCP Router Configuration
MCP_ROUTER_URL=http://localhost:3100
MCP_ROUTER_INTERNAL_URL=http://mcp-router:3000
REQUEST_TIMEOUT=70000
PROCESS_IDLE_TIMEOUT=60000
MAX_CONCURRENT_PROCESSES=10
MAX_CONNECTIONS=100
DEFAULT_TIMEOUT=30

# Service Ports
MCP_HUB_PORT=3000
CONFIG_MANAGER_PORT=3100
GATEWAY_PORT=3200
MONITORING_PORT=3300
LOGGING_PORT=3400

# Database Passwords (Change these!)
POSTGRES_PASSWORD=secure-postgres-password-2024
MYSQL_ROOT_PASSWORD=secure-mysql-password-2024
REDIS_PASSWORD=secure-redis-password-2024
MONGODB_PASSWORD=secure-mongodb-password-2024
ELASTICSEARCH_PASSWORD=secure-elastic-password-2024

# Admin Passwords (Change these!)
GRAFANA_ADMIN_PASSWORD=secure-grafana-password-2024
PROMETHEUS_ADMIN_PASSWORD=secure-prometheus-password-2024

# Network Configuration
NETWORK_NAME=mcp-network

# NPM Configuration
NPM_REGISTRY_URL=https://registry.npmjs.org

# Ollama Configuration
TASKMASTER_USE_OLLAMA=false
TASKMASTER_OLLAMA_BASE_URL=http://ollama:11434
TASKMASTER_OLLAMA_MODEL=llama3.2
TASKMASTER_LLM_PROVIDER=hybrid